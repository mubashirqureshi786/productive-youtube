{
  "manifest_version": 3,
  "name": "Productive YouTube - Focus & Distraction Blocker",
  "version": "2.0.1",
  "description": "Transform YouTube into a productivity tool. Block Shorts, autoplay, suggestions, and more. Stay focused on what matters.",
  "permissions": ["storage"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://www.youtube.com/youtubei/v1/player*",
    "https://www.youtube.com/watch*",
    "https://api.mymemory.translated.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Productive YouTube"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.js", "popup.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
